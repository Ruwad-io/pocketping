{
  "name": "pocketping",
  "private": true,
  "workspaces": [
    "packages/*",
    "bridges/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "bun run test:widget && bun run test:bridge",
    "test:widget": "cd packages/widget && bun test",
    "test:bridge": "cd bridge-server && bun test",
    "test:sdk": "cd packages/sdk-python && pytest",
    "test:e2e": "playwright test",
    "test:coverage": "bun run test:widget -- --coverage && bun run test:bridge -- --coverage",
    "lint": "eslint packages/**/*.ts bridge-server/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0"
  }
}
