{
  "name": "pocketping",
  "private": true,
  "workspaces": [
    "packages/*",
    "bridges/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "pnpm run test:widget && pnpm run test:bridge && pnpm run test:sdk-node",
    "test:widget": "cd packages/widget && pnpm test",
    "test:bridge": "cd bridge-server && bun test",
    "test:sdk-node": "cd packages/sdk-node && pnpm test",
    "test:sdk-python": "cd packages/sdk-python && pytest",
    "test:e2e": "playwright test",
    "test:coverage": "pnpm run test:widget -- --coverage && pnpm run test:bridge -- --coverage",
    "lint": "pnpm run lint:ts && pnpm run lint:py",
    "lint:ts": "eslint packages/**/*.ts bridge-server/**/*.ts --ignore-pattern '*.d.ts'",
    "lint:py": "cd packages/sdk-python && ruff check . --fix",
    "format": "pnpm run format:ts && pnpm run format:py",
    "format:ts": "prettier --write '**/*.{ts,tsx,json,md,yaml,yml}' --ignore-path .gitignore",
    "format:py": "cd packages/sdk-python && ruff format .",
    "typecheck": "cd packages/widget && pnpm exec tsc --noEmit && cd ../sdk-node && pnpm exec tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^8.56.0",
    "hono": "^4.11.4",
    "husky": "^9.1.7",
    "prettier": "^3.2.0",
    "semantic-release": "^24.2.3",
    "semantic-release-monorepo": "^8.0.2",
    "typescript": "^5.3.0"
  }
}
