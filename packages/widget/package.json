    "@vitest/coverage-v8": "^1.6.1",
    "jsdom": "^27.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "chat",
    "widget",
    "support",
    "customer-service",
    "telegram",
    "notifications"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ruwad-io/pocketping.git",
