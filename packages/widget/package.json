{
  "name": "@pocketping/widget",
  "version": "0.3.2",
  "description": "Embeddable chat widget for PocketPing",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cdn": "./dist/pocketping.min.global.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist && find src -name '*.js' -o -name '*.js.map' -o -name '*.d.ts' -o -name '*.d.ts.map' | xargs rm -f 2>/dev/null || true",
    "prebuild": "pnpm clean",
    "build": "tsup",
    "dev": "tsup --watch",
    "dev:test": "pnpm build && npx serve . -p 3333 --cors",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "preact": "^10.19.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/preact": "^3.2.4",
    "@vitest/coverage-v8": "^1.6.1",
    "jsdom": "^27.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "chat",
    "widget",
    "support",
    "customer-service",
    "telegram",
    "notifications"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ruwad-io/pocketping.git",
    "directory": "packages/widget"
  }
}
