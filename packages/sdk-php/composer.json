{
    "name": "pocketping/sdk",
    "description": "PocketPing PHP SDK - Embed live chat support directly from your backend",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "chat",
        "support",
        "live-chat",
        "customer-support",
        "pocketping",
        "widget"
    ],
    "authors": [
        {
            "name": "PocketPing Team",
            "email": "support@pocketping.io"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.10 || ^2.0",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7 || ^4.0"
    },
    "autoload": {
        "psr-4": {
            "PocketPing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PocketPing\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "lint": "phpstan analyse && php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "analyze": "phpstan analyse",
        "cs": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
