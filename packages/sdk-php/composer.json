{
    "name": "pocketping/sdk",
    "description": "PocketPing PHP SDK - Embed live chat support directly from your backend",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "chat",
        "support",
        "live-chat",
        "customer-support",
        "pocketping",
        "widget"
    ],
    "authors": [
        {
            "name": "PocketPing Team",
            "email": "support@pocketping.io"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10 || ^2.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "PocketPing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PocketPing\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyze": "phpstan analyse src tests --level=8",
        "cs": "phpcs --standard=PSR12 src tests",
        "cs:fix": "phpcbf --standard=PSR12 src tests"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
