{
  "name": "@pocketping/bridge-server",
  "version": "0.1.0",
  "description": "Standalone bridge server for PocketPing notifications (Telegram, Discord, Slack)",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile dist/bridge-server",
    "test": "bun test ../tests/integration",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t pocketping/bridge-server .",
    "docker:run": "docker run --env-file .env -p 3001:3001 pocketping/bridge-server"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@slack/socket-mode": "^2.0.5",
    "@slack/web-api": "^7.13.0",
    "discord.js": "^14.25.1",
    "hono": "^4.11.4",
    "telegraf": "^4.16.3"
  }
}
